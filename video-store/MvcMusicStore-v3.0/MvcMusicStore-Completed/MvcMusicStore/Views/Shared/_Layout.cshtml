<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/css/normalize.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    <link href='http://fonts.googleapis.com/css?family=Share+Tech' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet'
        type='text/css'>


    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" 
        type="text/css" />
    <link href="@Url.Content("~/Content/css/normalize.css")" rel="stylesheet" 
        type="text/css" />

    <link href="@Url.Content("http://fonts.googleapis.com/css?family=Share+Tech")" rel="stylesheet" 
        type="text/css" />
    <link href="@Url.Content("http://fonts.googleapis.com/css?family=Source+Sans+Pro")" rel="stylesheet" 
        type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" 
        type="text/javascript"></script>
</head>
<body>




    <div class="wrap">
        <header>

            <h1>
                <a href="/">
                    <img src="~/Content/img/greatvideologo.png" alt="Great Video" />

                </a>
            </h1>
            <nav id="main_navigation">
                <ul>
                    <li><a href="index.html">HOME</a></li>
                    <li><a href="/Store/Browse?Genre=Rock">DVD</a></li>
                    <li><a href="/Store/Browse?Genre=Classical">BLU-RAY</a></li>
                    <li><a href="stream.html">STREAM</a></li>
                    <li><a href="snacks.html">SNACKS</a></li>
                </ul>
            </nav>
            <ul id="user_navigation">
                <li><a href="login.html">Login</a></li>
                <li><a href="register.html">Register</a></li>
                <li><a href="account.html">Account</a></li>
                <li><a href="cart.html">Cart</a></li>
            </ul>

        </header>
        <article id="content">
            <section class="half" id="left">
                <h2>SPECIALS</h2>
                <ul class="catalog">
                    <li><a href="single_movie.html">
                        <img src="img/dvd_placeholder.jpg" class="small_movie" /></a><br />
                        <a href="#"><span id="add">+ </span><span id="link">Add to Cart</span></a></li>
                </ul>
            </section>
            <section class="half" id="right">
                <h2>RECOMMENDATIONS</h2>
                <ul class="catalog">
                    <li><a href="single_movie.html">
                        <img src="img/dvd_placeholder.jpg" class="small_movie" /></a><br />
                        <a href="#"><span id="add">+ </span><span id="link">Add to Cart</span></a></li>

                </ul>
            </section>
        </article>
    </div>
    <div id="header">
 
        <ul id="navlist">
            <li class="first"><a href="@Url.Content("~")" id="current">Home</a></li>
            <li><a href="@Url.Content("~/Store/")">Store</a></li>
            <li>@{Html.RenderAction("CartSummary", "ShoppingCart");}</li>
            <li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
        </ul>        
    </div>

    @{Html.RenderAction("GenreMenu", "Store");}

    <div id="main">
        @RenderBody()
    </div>

    <div id="footer">
        built with <a href="http://asp.net/mvc">ASP.NET MVC 3</a>
    </div>
    <footer>
    </footer>

    <script src="js/plugins.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
